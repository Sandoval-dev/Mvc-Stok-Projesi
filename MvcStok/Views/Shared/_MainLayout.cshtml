
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Mvc Dersleri</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Home</a></li>
                <li><a href="/Kategori/Index">Kategoriler</a></li>
                <li><a href="/Urun/Index">Ürünler</a></li>
                <li><a href="/Musteri/Index">Müşteriler</a></li>
                <li><a href="/Satis/Index">Satışlar</a></li>
                <li><a data-toggle="modal" data-target="#Modal2">Yardım</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>
    <div class="modal" id="Modal2">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Yardım Ekranı</h2>
                </div>
                <form>
                    <div class="modal-body">
                        <label>
                            Geliştirici Adı Soyadı
                        </label>
                        <input type="text"  class="form-control" placeholder="Osman Erdem Kılıç" readonly />
                        <br />
                        <label>
                            Bölümü
                        </label>
                        <input type="text"  class="form-control" placeholder="Bilgisayar Mühendisliği - 4. Sınıf" readonly />
                        <br />
                        <label>
                            Alanı
                        </label>
                        <input type="text"  class="form-control" placeholder="Yazılım" readonly />
                        <br />
                        <button class="btn btn-danger" data-dismiss="modal">Kapat</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

